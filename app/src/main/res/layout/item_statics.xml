<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="statistics"
            type="com.cleanSudoku.cleansodoku.statistics.GameStatistics" />

        <variable
            name="viewModel"
            type="com.cleanSudoku.cleansodoku.game.SudokuViewModel" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/statFragmentBgTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_games"

            style="@style/subHeadingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"

            android:fontFamily="@font/roboto"
            android:text="Games"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_games"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="20dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/text_games">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">


                <TextView
                    android:id="@+id/text_games_started"
                    style="@style/subHeadingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Games Started"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_games_started"

                    style="@style/subHeadingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:text="@{statistics.totalGame.toString()}"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/underline_game_started"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/text_games_started"
                    android:layout_margin="16dp"
                    android:background="@color/transparent" />

                <TextView
                    android:id="@+id/text_games_won"
                    style="@style/subHeadingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/underline_game_started"
                    android:layout_marginStart="16dp"
                    android:text="Games Won"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_games_win"

                    style="@style/subHeadingStyle"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_below="@id/underline_game_started"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:text="@{statistics.totalWin.toString()}"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View

                    android:id="@+id/underline_games_won"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/text_games_won"
                    android:layout_margin="16dp"
                    android:background="@color/transparent" />


                <TextView
                    android:id="@+id/text_win_rate"

                    style="@style/subHeadingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/underline_games_won"
                    android:layout_marginStart="16dp"
                    android:text="Win Rate"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_win_rate"

                    style="@style/subHeadingStyle"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_below="@id/underline_games_won"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:text="@{statistics.winRate}"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/underline_win_rate"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/text_games_won"
                    android:layout_margin="16dp"
                    android:background="@color/transparent" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_time"

            style="@style/subHeadingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"

            android:fontFamily="@font/roboto"
            android:text="Time"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="20dp"
            app:cardCornerRadius="3dp"
            app:layout_constraintTop_toBottomOf="@id/text_games">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

                <TextView
                    android:id="@+id/text_best_time"
                    style="@style/subHeadingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Best Time"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_best_time"
                    style="@style/subHeadingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    tools:text="not available "
                    android:text="@{statistics.bestTime}"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/underline_best_time"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/text_best_time"
                    android:layout_margin="16dp"
                    android:background="@color/transparent" />

                <TextView
                    android:id="@+id/text_average_time"

                    style="@style/subHeadingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/underline_best_time"
                    android:layout_marginStart="16dp"
                    android:text="Average Time"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_average_time"
                    tools:text="not available "
                    android:textSize="16sp"
                    style="@style/subHeadingStyle"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_below="@id/underline_best_time"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:text="@{statistics.avgTime}"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>