        <!--subtitle game details-->

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_gameDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_difficulty"
                style="@style/subHeadingStyle"

                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@{viewmodel.gameDifficulty}"
                tools:text="EASY" />

            <TextView
                android:id="@+id/tv_mistakes"
                style="@style/subHeadingStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@{`Mistakes: `+viewmodel.mistakes.toString() +`/`+viewmodel.mistakeLimit}"
                tools:text="Mistakes: 0/3" />

            <Chronometer

                android:id="@+id/gameTimer"
                style="@style/subHeadingStyle"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_baseline_timer"
                android:drawablePadding="5dp"
                android:gravity="left"
                android:paddingStart="30dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.cleanSudoku.cleansodoku.game.SudokuBoardView

            android:id="@+id/sudokuBoardView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_gameDetail" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_actionBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_numberDial">

            <TextView
                android:id="@+id/btnUndo"
                style="@style/actionBtnStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_background"

                android:onClick="@{()->viewmodel.restartBoard()}"
                android:text="Restart"
                app:drawableTopCompat="@drawable/ic_restart" />

            <TextView
                android:id="@+id/btnErase"

                style="@style/actionBtnStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_background"


                android:onClick="@{()->viewmodel.clearCellValue()}"
                android:text="Erase"
                app:drawableTopCompat="@drawable/ic_eraser" />

            <ToggleButton
                android:id="@+id/btnNote"
                style="@style/actionBtnStyle"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_background"

                android:onClick="@{()->viewmodel.toggleNotes()}"
                android:textOff="Notes:Off"

                android:textOn="Notes:On"
                app:drawableTopCompat="@drawable/edit_btn_state" />

            <TextView
                android:id="@+id/btnHint"

                style="@style/actionBtnStyle"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_background"
                android:onClick="@{()->viewmodel.showCellHint()}"
                android:text="Hint"
                app:drawableTopCompat="@drawable/lightbulb"
                tools:text="hint" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/layout_numberDial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sudokuBoardView">

            <TextView
                android:id="@+id/text_1"
                style="@style/numberDialStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:gravity="center"

                android:onClick="@{()->viewmodel.updateCellValue(1)}"
                android:text="1"
                app:layout_constraintEnd_toStartOf="@+id/text_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
