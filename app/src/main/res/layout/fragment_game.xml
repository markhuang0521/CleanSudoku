                android:onClick="@{()->viewmodel.updateCellValue(3)}"
                android:text="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/text_2"
                app:layout_constraintTop_toTopOf="@id/text_1"
                tools:layout_editor_absoluteY="3dp" />

            <TextView
                android:id="@+id/text_4"
                style="@style/numberDialStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"

                android:gravity="center"
                android:onClick="@{()->viewmodel.updateCellValue(4)}"
                android:text="4"
                app:layout_constraintEnd_toStartOf="@+id/text_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_1" />

            <TextView
                android:id="@+id/text_5"
                style="@style/numberDialStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"

                android:backgroundTint="@android:color/transparent"
                android:onClick="@{()->viewmodel.updateCellValue(5)}"
                android:text="5"
                app:layout_constraintEnd_toStartOf="@+id/text_6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/text_4"
                app:layout_constraintTop_toTopOf="@+id/text_4" />

            <TextView
                android:id="@+id/text_6"
                style="@style/numberDialStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"

                android:onClick="@{()->viewmodel.updateCellValue(6)}"
                android:text="6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/text_5"
                app:layout_constraintTop_toTopOf="@+id/text_4" />

            <TextView
                android:id="@+id/text_7"
                style="@style/numberDialStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"

                android:onClick="@{()->viewmodel.updateCellValue(7)}"
                android:text="7"
                app:layout_constraintEnd_toStartOf="@+id/text_8"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_4" />

            <TextView
                android:id="@+id/text_8"
                style="@style/numberDialStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"

                android:onClick="@{()->viewmodel.updateCellValue(8)}"
                android:text="8"
                app:layout_constraintEnd_toStartOf="@+id/text_9"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/text_7"
                app:layout_constraintTop_toTopOf="@+id/text_7" />

            <TextView
                android:id="@+id/text_9"
                style="@style/numberDialStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"

                android:onClick="@{()->viewmodel.updateCellValue(9)}"
                android:text="9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/text_8"
                app:layout_constraintTop_toTopOf="@+id/text_7" />
        </androidx.constraintlayout.widget.ConstraintLayout>

