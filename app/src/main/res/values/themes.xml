<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CleanSoDoKu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--        <item name="android:textColorPrimary">@color/white</item>-->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/darker_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/darker_accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


    </style>

    <style name="titleFragmentBgTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@drawable/gradient_bg_title</item>

    </style>

    <style name="statFragmentBgTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@drawable/gradient_bg_stat</item>

    </style>

    <style name="newGameBtnTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/gradient_btn_new_game</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">5dp</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">@color/main_blue</item>


    </style>

    <style name="continueGameBtnTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/gradient_btn_continue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">5dp</item>
        <item name="android:shadowRadius">5</item>

    </style>


    <style name="gameToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        ....
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="subHeadingStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="btnStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">5dp</item>
        <item name="android:shadowRadius">5</item>


    </style>

    <style name="textBtnStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>


    </style>

    <style name="numberDialStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/darker_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="actionBtnStyle" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>

        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>